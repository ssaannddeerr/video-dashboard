{
  "name": "prague-to-san-francisco-live",
  "version": "1.0.0",
  "description": "Live video feeds from Prague and San Francisco in a 3x4 grid",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["electron", "video", "dashboard", "streaming"],
  "author": "sander <sander@lewis.su>",
  "license": "MIT",
  "dependencies": {
    "hls.js": "^1.5.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "productName": "Prague to San Francisco Live",
    "appId": "com.praguetosanfranciscolive.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "Prague to San Francisco Live Installer",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 270,
          "y": 400,
          "type": "file",
          "path": "build/README-macOS.md"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Video"
    },
    "publish": null
  }
}
